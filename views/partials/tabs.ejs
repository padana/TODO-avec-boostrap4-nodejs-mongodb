<div class="row">
<div class="col-md-6">
<table class="table table-dark">
    <thead>
      <tr>
        <th>id</th>
        <th>name</th>
        <th>delete</th>
      </tr>
    </thead>
    <tbody>
     <% for(user of user)  {%>
      <tr>
        <td><%= user.id  %></td>
        <td><%= user.name  %></td>
        <td>
          <form method="POST" action="/supprimer/<%= user.id  %>?_method=DELETE">
           <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>
          </form>
        </td>
      </tr>
     <%}   %>
    </tbody>
  </table>
</div>
</div>
</div>